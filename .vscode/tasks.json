{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "python",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks":[
        {
            "taskName": "impl",
            "suppressTaskName": true,
            "args": [
                "${workspaceRoot}/build/build.py",
                "Impl"
            ]
        },
        {
            "taskName": "opengl",
            "suppressTaskName": true,
            "args": [
                "${workspaceRoot}/build/build.py",
                "OpenGL"
            ]
        },
        {
            "taskName": "runtime",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": [
                "${workspaceRoot}/build/build.py",
                "Runtime"
            ],
            "problemMatcher": {
                "owner": "d",
                "fileLocation": ["relative", "${workspaceRoot}/Runtime/"],
                "pattern": {
                    "regexp": "^(.*)\\(([0-9]+)\\): (Error|Warning): (.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "taskName": "all",
            "suppressTaskName": true,
            "args": [
                "${workspaceRoot}/build/build.py",
                "all"
            ]
        }
    ]
}